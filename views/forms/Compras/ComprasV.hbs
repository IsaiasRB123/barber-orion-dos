<!DOCTYPE html>
<html lang="es">

<head>
    <title>BARBERIA-ORION-PEDIDOS</title>
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/logo/logo.png">
    <link rel="stylesheet" href="/public/assets/css/style.css">
    <!-- bootstrap -->
    {{> head}}
</head>

<body>
    <!-- SideBar -->
    {{> sidebar}}

    <!-- Content page-->
    <section class="full-box dashboard-contentPage m-6">
        <!-- NavBar -->
        {{> navAdmin}}
        <!-- Content page -->
        <div class="container-fluid">
            <div class="page-header">
                <h1 class="text-titles"><i class="zmdi zmdi-account zmdi-hc-fw"></i>Registrar Compra </h1>
            </div>
        </div>

        <div class="Contenttt">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <form action="" id="formulario">
                            <div class="flex-container-registro">
                                <div class="input-wrapper" id="grupo__nombre">
                                    <label for="fecha_venta">Productos</label>
                                    <input id="productos" placeholder="nike" disabled>
                                        <option hidden="">Proveedores</option>
                                        <!-- Rellena la opción deseada -->
                                    </input>
                                </div>
                                <div class="input-wrapper">
                                    <label for="fecha_venta">Fecha de venta</label>
                                    <input placeholder="04/04/2024" id="fecha_venta" name="fecha_venta" disabled>
                                </div>
                                <div class="input-wrapper" id="grupo__nombre">
                                    <label for="fecha_venta">Estado</label>
                                    <input placeholder="pendiente" disabled>
                                        <option hidden="">Estado</option>
                                        <!-- Rellena la opción deseada -->
                                    </input>
                                </div>
                            </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="container border border-dark-3 pt-4">
                    <div class="row">
                        <div class="col">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>Precio</th>
                                        <th>Iva</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Camisa</td>
                                        <td>15</td>
                                        <td>100</td>
                                        <td>16%</td>
                                        <td>116</td>
                                    </tr>
                                    <tr>
                                        <td>Cera</td>
                                        <td>34</td>
                                        <td>340</td>
                                        <td>16%</td>
                                        <td>394.4</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="mb-3 mt-3">
                    <h6 class="MontoTotalTitle" style="float: inline-start;">Monto Total: 510.000</h6>
                    <a type="button" href="/Compras"
            style="text-decoration:none;text-align:center;margin-left:145px;position:absolute;padding-top:8px;color:red">Cerrar</a>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS, jQuery, y Popper.js -->
        <script src="./js/jquery-3.1.1.min.js"></script>
        <script src="./js/sweetalert2.min.js"></script>
        <script src="./js/bootstrap.min.js"></script>
        <script src="./js/material.min.js"></script>
        <script src="./js/ripples.min.js"></script>
        <script src="./js/validaciones/productos.js"></script>
        <script src="./js/validaciones/validacionesCompras.js"></script>
        <script src="./js/jquery.mCustomScrollbar.concat.min.js"></script>
        <script src="./js/main.js"></script>
        <script>
            $.material.init();
        </script>
    </section>
</body>

</html>
