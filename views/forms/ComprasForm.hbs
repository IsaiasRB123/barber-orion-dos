<!DOCTYPE html>
<html lang="es">
{{> head}}

<body>
    <!-- SideBar -->
    {{> sidebar}}

    <!-- Content page-->
    <section class="full-box dashboard-contentPage">
        <!-- NavBar -->
        <nav class="full-box dashboard-Navbar">
            <ul class="full-box list-unstyled text-right">
                <li class="pull-left">
                    <a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
                </li>
                <li>
                    <a href="#!" class="btn-Notifications-area">
                        <i class="zmdi zmdi-notifications-none"></i>
                        <span class="badge">7</span>
                    </a>
                </li>
                <li>
                    <a href="#!" class="btn-search">
                        <i class="zmdi zmdi-search"></i>
                    </a>
                </li>
                <li>
                    <a href="#!" class="btn-modal-help">
                        <i class="zmdi zmdi-help-outline"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- form -->
        <div class="container" style="margin-top: 60px;">
    <div class="row justify-content-center">
        <div class="col-md-6 ">
            <section class="container-form">
                <header>Registrar Compra</header>
                <form class="form-admin" action="#" id="formulario">
                    <div class="input-box" id="grupo__proveedor">
                        <label>Proveedor</label>
                        <input type="text" name="proveedor" id="proveedor">
                        <p class="formulario__input-error">No se permite símbolos o números en este campo</p>
                    </div>
                    <div class="input-box" id="grupo__fecha">
                        <label>Fecha</label>
                        <input type="date" name="fecha" id="fecha">
                        <p class="formulario__input-error">Por favor, introduce una fecha válida</p>
                    </div>
                    <div class="input-box" id="grupo__estado">
                        <label>Estado</label>
                        <select name="estado" id="estado">
                            <option value="pendiente">Pendiente</option>
                            <option value="aprobado">Aprobado</option>
                            <option value="rechazado">Rechazado</option>
                        </select>
                        <p class="formulario__input-error">Selecciona un estado válido</p>
                    </div>
                    <div class="input-box" id="grupo__total">
                        <label>Total</label>
                        <input type="number" name="total" id="total" min="0" step="0.01">
                        <p class="formulario__input-error">Ingresa un total válido</p>
                    </div>
                    <button type="submit">Registrar</button>
                    <a type="button" href="/Compras" style="text-decoration:none;text-align:center;margin-left:115px;position:absolute;padding-top:8px">Cerrar</a>
                </form>
            </section>
        </div>
    </div>
</div>

        <!-- Bootstrap JS, jQuery, y Popper.js -->
        <script>
            $.material.init();
        </script>
        <script src="./js/jquery-3.1.1.min.js"></script>
        <script src="./js/sweetalert2.min.js"></script>
        <script src="./js/bootstrap.min.js"></script>
        <script src="./js/material.min.js"></script>
        <script src="./js/ripples.min.js"></script>
        <script src="./js/jquery.mCustomScrollbar.concat.min.js"></script>
        <script src="./js/main.js"></script>
        <script src="./js/validaciones.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

        <!-- SweetAlert2 JS -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.0/dist/sweetalert2.all.min.js"></script>

        <!-- Tu JavaScript personalizado -->
        <script src="../../public/ADMIN/js/usuarioDas.js"></script>


</body>

</html>