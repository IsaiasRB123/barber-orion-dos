<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Graficas</title>
  <link rel="stylesheet" href="./css/main.css">
  <!-- Incluir otros estilos o scripts necesarios -->
</head>
<body>
  <!-- Incluir el contenido del encabezado -->
  {{> head}}

  <!-- SideBar -->
  {{> sidebar}}

  <!-- Contenido de la página -->
  <section class="full-box dashboard-contentPage">
    <!-- Barra de navegación -->
    <nav class="full-box dashboard-Navbar">
      <ul class="full-box list-unstyled text-right">
        <li class="pull-left">
          <a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
        </li>
        <li>
          <a href="#!" class="btn-Notifications-area">
            <i class="zmdi zmdi-notifications-none"></i>
            <span class="badge">7</span>
          </a>
        </li>
        <li>
          <a href="#!" class="btn-search">
            <i class="zmdi zmdi-search"></i>
          </a>
        </li>
        <li>
          <a href="#!" class="btn-modal-help">
            <i class="zmdi zmdi-help-outline"></i>
          </a>
        </li>
      </ul>
    </nav>

    <!-- Contenido de la página -->
    <div class="container">
      <!-- Gráficas de barras -->
      <div class="row">
        <div class="col-md-6">
          <div class="chart-container">
            <div class="select-box flex-container-registro">
                                    <select id="productos" onchange="actualizarPrecio()">
                                        <option hidden="">Mes</option>
                                        <option value="cera_antioxidante" id="cera_antioxidante">Agosto
                                        </option>
                                        <option value="minoxidil" id="minoxidil">Septiembre</option>
                                        <option value="shampoo_180ml" id="shampoo_180ml">Octubre</option>
                                    </select>
            </div>
            <h2 class="chart-title">Productos</h2>
            <canvas id="productosChart"></canvas>
          </div>
        </div>
        <div class="col-md-6">
          <div class="chart-container">
            <div class="select-box flex-container-registro">
                                    <select id="productos" onchange="actualizarPrecio()">
                                        <option hidden="">Mes</option>
                                        <option value="cera_antioxidante" id="cera_antioxidante">Mayo
                                        </option>
                                        <option value="minoxidil" id="minoxidil">Junio</option>
                                        <option value="shampoo_180ml" id="shampoo_180ml">Julio</option>
                                    </select>
            </div>
            <h2 class="chart-title">Servicios</h2>
            <canvas id="nuevaChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Otras gráficas -->
      <div class="row">
        <div class="col-md-6">
          <div class="chart-container">
            <div class="select-box flex-container-registro">
                                    <select id="productos" onchange="actualizarPrecio()">
                                        <option hidden="">Mes</option>
                                        <option value="cera_antioxidante" id="cera_antioxidante">Febrero
                                        </option>
                                        <option value="minoxidil" id="minoxidil">Marzo</option>
                                        <option value="shampoo_180ml" id="shampoo_180ml">Abril</option>
                                    </select>
            </div>
            <h2 class="chart-title">Top 5 más vendidos</h2>
            <canvas id="serviciosChart"></canvas>
          </div>
        </div>
        <div class="col-md-6">
          <div class="chart-container">
            <div class="select-box flex-container-registro">
                                    <select id="productos" onchange="actualizarPrecio()">
                                        <option hidden="">Mes</option>
                                        <option value="cera_antioxidante" id="cera_antioxidante">Febrero
                                        </option>
                                        <option value="minoxidil" id="minoxidil">Marzo</option>
                                        <option value="shampoo_180ml" id="shampoo_180ml">Abril</option>
                                    </select>
            </div>
            <h2 class="chart-title">Citas completadas vs Citas canceladas</h2>
            <canvas id="citasChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Scripts -->
  <script src="./js/jquery-3.1.1.min.js"></script>
  <script src="./js/sweetalert2.min.js"></script>
  <script src="./js/bootstrap.min.js"></script>
  <script src="./js/material.min.js"></script>
  <script src="./js/ripples.min.js"></script>
  <script src="./js/jquery.mCustomScrollbar.concat.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="./js/main.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/echarts/5.3.0/echarts.min.js"></script>
  <script>
    // Inicialización de Material Design
    $.material.init();

    // Datos para las gráficas
    const productosData = {
      labels: ['Shampoo', 'Cera', 'Gafas', 'Manilla', 'Gomina'],
      datasets: [{
        label: 'Productos',
        data: [12, 19, 3, 5, 2],
        backgroundColor: [
          'rgba(255, 99, 132, 0.7)',
          'rgba(54, 162, 235, 0.7)',
          'rgba(255, 206, 86, 0.7)',
          'rgba(75, 192, 192, 0.7)',
          'rgba(153, 102, 255, 0.7)'
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)',
          'rgba(153, 102, 255, 1)'
        ],
        borderWidth: 8
      }]
    };

    const nuevaData = {
      labels: ['Corte', 'Barba', 'Tintura', 'Afeitado', 'Peinado'],
      datasets: [{
        label: 'Servicios',
        data: [65, 59, 80, 81, 56],
        backgroundColor: [
          'rgba(255, 99, 132, 0.7)',
          'rgba(54, 162, 235, 0.7)',
          'rgba(255, 206, 86, 0.7)',
          'rgba(75, 192, 192, 0.7)',
          'rgba(153, 102, 255, 0.7)'
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)',
          'rgba(153, 102, 255, 1)'
        ],
        borderWidth: 8
      }]
    };

    // Configuración de las gráficas
    const chartOptions = {
      responsive: true,
      plugins: {
        legend: {
          position: 'top',
        },
      },
    };

    // Crear gráficas
    const ctxProductos = document.getElementById('productosChart').getContext('2d');
    const productosChart = new Chart(ctxProductos, {
      type: 'bar', // Tipo de gráfica de barras
      data: productosData,
      options: chartOptions
    });

    const ctxNueva = document.getElementById('nuevaChart').getContext('2d');
    const nuevaChart = new Chart(ctxNueva, {
      type: 'bar', // Tipo de gráfica de barras
      data: nuevaData,
      options: chartOptions
    });

    // Otras gráficas
    const serviciosData = {
      labels: ['Manillas', 'Camisas','Cortes','Barba'],
      datasets: [{
        label: 'Top 5',
        data: [4, 5, 6, 9],
        backgroundColor: [
          'rgba(255, 99, 132, 0.7)',
          'rgba(54, 162, 235, 0.7)',
          'rgba(255, 206, 86, 0.7)',
          'rgba(75, 192, 192, 0.7)'
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)'
        ],
        borderWidth: 8
      }]
    };

    const citasData = {
      labels: ['Completadas', 'Canceladas'],
      datasets: [{
        label: 'Citas',
        data: [20, 10],
        backgroundColor: [
          'rgba(75, 192, 192, 0.7)',
          'rgba(255, 99, 132, 0.7)'
        ],
        borderColor: [
          'rgba(75, 192, 192, 1)',
          'rgba(255, 99, 132, 1)'
        ],
        borderWidth: 8
      }]
    };

    // Crear otras gráficas
    const ctxServicios = document.getElementById('serviciosChart').getContext('2d');
    const serviciosChart = new Chart(ctxServicios, {
      type: 'bar',
      data: serviciosData,
      options: chartOptions
    });

    const ctxCitas = document.getElementById('citasChart').getContext('2d');
    const citasChart = new Chart(ctxCitas, {
      type: 'bar',
      data: citasData,
      options: chartOptions
    });

  </script>

  <style>
    .chart-container {
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 20px;
      background-color: #fff;
    }

    .chart-title {
      text-align: center;
      margin-bottom: 15px;
    }

    /* Redimensionar el lienzo de la gráfica para que tengan el mismo tamaño */
    canvas {
      max-width: 100%;
      height: auto;
    }
  </style>
</body>
</html>