        </div>
        <!-- Bootstrap JS, jQuery, y Popper.js -->
        <script>
            $.material.init();
        </script>
        <script src="./js/jquery-3.1.1.min.js"></script>
        <script src="./js/sweetalert2.min.js"></script>
        <script src="./js/bootstrap.min.js"></script>
        <script src="./js/material.min.js"></script>
        <script src="./js/ripples.min.js"></script>
        <script src="./js/jquery.mCustomScrollbar.concat.min.js"></script>
        <script src="./js/main.js"></script>
        <script src="./js/validaciones/validacionesRoles.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.0/dist/sweetalert2.all.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const urlParams = new URLSearchParams(window.location.search);
                const id = urlParams.get('id');

                if (id) {
                    axios.get(`http://localhost:5276/api/RoleDos/${id}`)
                        .then(response => {
                            const data = response.data;
                            document.getElementById('id').value = data.id;
                            document.getElementById('nombre').value = data.nombre;
                            document.getElementById('estado').value = data.estado;

                            const permisos = data.permisos.split(', ');

                            permisos.forEach(permiso => {
                                const checkbox = document.querySelector(`input[type="checkbox"][value="${permiso}"]`);
                                if (checkbox) {
                                    checkbox.checked = true;
                                }
                            });
                        })
                        .catch(error => {
                            console.error('Error fetching data:', error);
                        });
                }
            });

            document.getElementById('formularioRoles').addEventListener('submit', function(event) {
                event.preventDefault();

                const id = document.getElementById('id').value;
                const nombre = document.getElementById('nombre').value;
                const estado = document.getElementById('estado').value === 'true';
                const checkboxes = document.querySelectorAll('input[type="checkbox"]');
                let permisos = [];

                checkboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        permisos.push(checkbox.value);
                    }
                });

                permisos = permisos.join(', ');

                const data = {
                    id: id,
                    nombre: nombre,
                    estado: estado,
                    permisos: permisos
                };

                axios.put(`http://localhost:5276/api/RoleDos/${id}`, data)
                    .then(response => {
                        Swal.fire({
                            icon: 'success',
                            title: 'Rol actualizado',
                            text: 'El rol ha sido actualizado correctamente',
                        }).then(() => {
                            window.location.href = '/Roles';
                        });
                    })
                    .catch(error => {
                        console.error('Error updating data:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Hubo un error al actualizar el rol',
                        });
                    });
            });
        </script>
</body>

</html>
