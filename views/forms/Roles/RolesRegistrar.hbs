<!DOCTYPE html>
<html lang="es">
{{> head}}

<body>
    <!-- SideBar -->
    {{> sidebar}}

    <!-- Content page-->
    <section class="full-box dashboard-contentPage">
        <!-- NavBar -->
        <nav class="full-box dashboard-Navbar">
            <ul class="full-box list-unstyled text-right">
                <li class="pull-left">
                    <a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
                </li>
                <li>
                    <a href="#!" class="btn-Notifications-area">
                        <i class="zmdi zmdi-notifications-none"></i>
                        <span class="badge">7</span>
                    </a>
                </li>
                <li>
                    <a href="#!" class="btn-search">
                        <i class="zmdi zmdi-search"></i>
                    </a>
                </li>
                <li>
                    <a href="#!" class="btn-modal-help">
                        <i class="zmdi zmdi-help-outline"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- form -->
        <div class="container" style="margin-top: 60px;">
            <div class="row justify-content-center">
                <div class="col-md-6 ">
                    <section class="container-form">
                        <header>Registrar Roles</header>
                        <form class="form-admin" id="formularioRoles">
                            <div class="row">
                                <div class="input-box" id="grupo__nombre">
                                    <label>*Nombre</label>
                                    <input type="text" name="nombre" id="nombre">
                                    <p class="formulario__input-error">No se permite simbolos o números en este campo
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <label style="color: black;">*Permisos</label>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="dashboard" id="flexCheckDefault1">
                                        <label class="form-check-label" for="flexCheckDefault1">
                                            dashboard
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Roles" id="flexCheckDefault2">
                                        <label class="form-check-label" for="flexCheckDefault2">
                                            Roles
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Vista" id="flexCheckDefault3">
                                        <label class="form-check-label" for="flexCheckDefault3">
                                            Vista
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Usuarios" id="flexCheckDefault4">
                                        <label class="form-check-label" for="flexCheckDefault4">
                                            Usuarios
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Categorias" id="flexCheckDefault5">
                                        <label class="form-check-label" for="flexCheckDefault5">
                                            Categorias
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Productos" id="flexCheckDefault6">
                                        <label class="form-check-label" for="flexCheckDefault6">
                                            Productos
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Proveedores" id="flexCheckDefault7">
                                        <label class="form-check-label" for="flexCheckDefault7">
                                            Proveedores
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Compras" id="flexCheckDefault8">
                                        <label class="form-check-label" for="flexCheckDefault8">
                                            Compras
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Servicios" id="flexCheckDefault9">
                                        <label class="form-check-label" for="flexCheckDefault9">
                                            Servicios
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Empleados" id="flexCheckDefault10">
                                        <label class="form-check-label" for="flexCheckDefault10">
                                            Empleados
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Horario Empleados" id="flexCheckDefault11">
                                        <label class="form-check-label" for="flexCheckDefault11">
                                            Horario Empleados
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Servicio recomendado" id="flexCheckDefault12">
                                        <label class="form-check-label" for="flexCheckDefault12">
                                            Servicio recomendado
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Clientes" id="flexCheckDefault13">
                                        <label class="form-check-label" for="flexCheckDefault13">
                                            Clientes
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Citas" id="flexCheckDefault14">
                                        <label class="form-check-label" for="flexCheckDefault14">
                                            Citas
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Pedidos" id="flexCheckDefault15">
                                        <label class="form-check-label" for="flexCheckDefault15">
                                            Pedidos
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Citas" id="flexCheckDefault16">
                                        <label class="form-check-label" for="flexCheckDefault16">
                                            Citas
                                        </label>
                                    </div>

                                    <!-- Aquí añadir más checkboxes según tus necesidades -->
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-box address">
                                    <label>*Estado</label>
                                    <div class="select-box">
                                        <select id="estado">
                                            <option value="true">Activo</option>
                                            <option value="false">Inactivo</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="formulario__mensaje" id="formulario__mensaje">
                                <p>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="svgIcon-form" viewBox="0 0 512 512">
                                        <path
                                            d="M256 32c14.2 0 27.3 7.5 34.5 19.8l216 368c7.3 12.4 7.3 27.7 .2 40.1S486.3 480 472 480H40c-14.3 0-27.6-7.7-34.7-20.1s-7-27.8 .2-40.1l216-368C228.7 39.5 241.8 32 256 32zm0 128c-13.3 0-24 10.7-24 24V296c0 13.3 10.7 24 24 24s24-10.7 24-24V184c0-13.3-10.7-24-24-24zm32 224a32 32 0 1 0 -64 0 32 32 0 1 0 64 0z" />
                                    </svg>
                                    <b>Error:</b> Por favor rellena el formulario correctamente
                                </p>
                            </div>
                            <button type="submit">Registrar</button>
                            <a type="button" href="/Roles"
                                style="text-decoration:none;text-align:center;margin-left:115px;position:absolute;padding-top:8px">Cerrar</a>
                        </form>
                    </section>
                </div>
            </div>
        </div>
        <!-- Bootstrap JS, jQuery, y Popper.js -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.3.0/dist/sweetalert2.all.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

        <script>
            document.getElementById('formularioRoles').addEventListener('submit', function (event) {
                event.preventDefault();

                // Capturar datos del formulario
                const nombre = document.getElementById('nombre').value.trim();
                const estado = document.getElementById('estado').value === 'true'; // Capturar el valor booleano de estado
                const permisos = Array.from(document.querySelectorAll('input[type="checkbox"]:checked')).map(cb => cb.value);

                console.log('Nombre:', nombre);
                console.log('Estado:', estado);
                console.log('Permisos:', permisos);

                // Verifica si hay valores válidos
                if (!nombre || permisos.length === 0) {
                    Swal.fire({
                        title: 'Error',
                        text: 'Por favor, rellena todos los campos obligatorios.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                    return;
                }

                // Crear objeto con los datos del formulario
                const data = {
                    nombre: nombre,
                    estado: estado,
                    permisos: permisos.join(', '), // Convertir array a string
                    usuarioDos: null // Ajustar según necesidades
                };

                console.log('Data to send:', data); // Log para depuración

                // Enviar datos a la API
                fetch('http://localhost:5276/api/RoleDos', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => {
                    if (!response.ok) {
                        return response.json().then(err => { throw new Error(err.message || response.statusText); });
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Success:', data);
                    // Mostrar mensaje de éxito o redirigir
                    Swal.fire({
                        title: '¡Éxito!',
                        text: 'El rol ha sido registrado correctamente.',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then(() => {
                        window.location.href = '/Roles';
                    });
                })
                .catch((error) => {
                    console.error('Error:', error);
                    // Mostrar mensaje de error
                    Swal.fire({
                        title: 'Error',
                        text: 'Hubo un problema al registrar el rol: ' + error.message,
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                });
            });
        </script>
    </body>
</html>
