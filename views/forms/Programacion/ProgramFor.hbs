<!DOCTYPE html>
<html lang="es">
{{> head}}

<body>
    <!-- SideBar -->
    {{> sidebar}}
    
    <!-- Content page-->
    <section class="full-box dashboard-contentPage">
        <!-- NavBar -->
        <nav class="full-box dashboard-Navbar">
            <ul class="full-box list-unstyled text-right">
                <li class="pull-left">
                    <a href="#!" class="btn-menu-dashboard"><i class="zmdi zmdi-more-vert"></i></a>
                </li>
                <li>
                    <a href="#!" class="btn-Notifications-area">
                        <i class="zmdi zmdi-notifications-none"></i>
                        <span class="badge">7</span>
                    </a>
                </li>
                <li>
                    <a href="#!" class="btn-search">
                        <i class="zmdi zmdi-search"></i>
                    </a>
                </li>
                <li>
                    <a href="#!" class="btn-modal-help">
                        <i class="zmdi zmdi-help-outline"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- form -->
        <div class="container" style="margin-top: 60px;">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <section class="container-form">
                        <header>Registrar programacion Empleado</header>
                        <form class="form-admin" id="formulario">
                            <div class="input-box" id="grupo__empleado">
                                <label for="empleado">Empleado</label>
                                <div class="select-box">
                                    <select name="empleado" id="empleado">
                                        <!-- Opciones de empleado se añadirán aquí dinámicamente -->
                                    </select>
                                </div>
                                <div class="formulario__input-error">empleado no válido</div>
                            </div>
                            <div class="input-box" id="grupo__mes">
                                <label for="mes">Mes</label>
                                <input type="text" name="mes" id="mes">
                                <div class="formulario__input-error">mes no válido</div>
                            </div>
                            <div class="input-box" id="grupo__horaInicio">
                                <label for="horaInicio">Hora inicio</label>
                                <input type="time" name="horaInicio" id="horaInicio">
                                <div class="formulario__input-error">hora inicio no válido</div>
                            </div>
                            <div class="input-box" id="grupo__horaFin">
                                <label for="horaFin">Hora fin</label>
                                <input type="time" name="horaFin" id="horaFin">
                                <div class="formulario__input-error">Hora fin no válido</div>
                            </div>
                            <div class="input-box" id="grupo__estado">
                                <label for="estado">Estado</label>
                                <input type="text" name="estado" id="estado">
                                <div class="formulario__input-error">Estado no válido</div>
                            </div>
                            <button type="submit" id="btn-registrar">Registrar</button>
                            <a type="button" href="/Horario" style="text-decoration:none;text-align:center;margin-left:115px;position:absolute;padding-top:8px">Cerrar</a>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS, jQuery, y Popper.js -->
    <script>
        $.material.init();
    </script>
    <script src="./js/jquery-3.1.1.min.js"></script>
    <script src="./js/sweetalert2.min.js"></script>
    <script src="./js/bootstrap.min.js"></script>
    <script src="./js/material.min.js"></script>
    <script src="./js/ripples.min.js"></script>
    <script src="./js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="./js/main.js"></script>
    <script src="./js/sweetalert.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <script src="./js/validaciones/validacionesProgramacion.js"></script>

    <!-- Validaciones JS -->
</body>

<style>
    .formulario__input-error {
        color: red;
        display: none;
    }
    .input-box-incorrecto {
        border-color: red;
    }
    .input-box-correcto {
        border-color: green;
    }
</style>

</html>            